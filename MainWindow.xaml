<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Введите месяц от 1-12" FontWeight="Bold" FontSize="14"></Label>
        <TextBox Grid.Row="1" x:Name="month"
                 TextAlignment="Center" FontSize="14" Height="30"></TextBox>
        <Button Grid.Row="2" Content="Определить сезон" Click="monthseason" Margin="0,10" FontWeight="Bold" FontSize="14"></Button>
        <TextBlock Grid.Row="3" x:Name="result" Text="Здесь будет результат" FontSize="16" FontWeight="Bold" Margin="0,20"></TextBlock>
        
    </Grid>
</Window>
